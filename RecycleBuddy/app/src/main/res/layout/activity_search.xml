<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:text="Recycle Buddy"
        android:textColor="#014421"
        android:textSize="48dp" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="27dp"
        android:layout_height="23dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/simpleSearchView"
        android:layout_centerVertical="true"
        android:backgroundTint="#014421"
        android:background="@drawable/search" />

    <SearchView
        android:id="@+id/simpleSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:iconifiedByDefault="false"
        android:queryHint="Search Here" />

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:text="Enter an item to see how it should be disposed"
        android:textColor="#014421"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:id="@+id/articles"
        style="@style/LabelStyle"
        android:layout_below="@+id/instruction"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="256dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/darkGrey"
        android:onClick="goarticles"
        android:text="@string/articles_label"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <Button
        android:id="@+id/store"
        style="@style/LabelStyle"
        android:layout_below="@+id/instruction"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="256dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/darkGrey"
        android:onClick="gostore"
        android:text="@string/articles_label"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

</RelativeLayout>