<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrashActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Trash Tips"
        android:textColor="#014421"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="85dp"
        android:text="Do Trash: "
        android:textColor="#014421"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dotrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading1"
        android:text="@string/do_trash_bulleted_list"
        android:textSize="16dp"
        android:textColor="#014421"
        android:layout_margin="10dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="250dp"
        android:text="Don't Trash: "
        android:textColor="#014421"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/donttrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading2"
        android:text="@string/dont_trash_bulleted_list"
        android:textSize="16dp"
        android:textColor="#014421"
        android:layout_margin="10dp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/back"
        style="@style/TextStyle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:onClick="goBack"
        android:text="Back"
        android:textSize="28sp" />

</RelativeLayout>